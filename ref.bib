@article{ghiringhelli_long-range_2012,
author = {G. Ghiringhelli  and M. Le Tacon  and M. Minola  and S. Blanco-Canosa  and C. Mazzoli  and N. B. Brookes  and G. M. De Luca  and A. Frano  and D. G. Hawthorn  and F. He  and T. Loew  and M. Moretti Sala  and D. C. Peets  and M. Salluzzo  and E. Schierle  and R. Sutarto  and G. A. Sawatzky  and E. Weschke  and B. Keimer  and L. Braicovich },
title = {Long-Range Incommensurate Charge Fluctuations in (Y,Nd)Ba<sub>2</sub>Cu<sub>3</sub>O<sub>6+</sub><i><sub>x</sub></i>},
journal = {Science},
volume = {337},
