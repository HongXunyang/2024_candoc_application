	number = {1},
	urldate = {2023-05-05},
	journal = {Nature Communications},
	author = {Litvinenko, K. L. and Le, Nguyen H. and Redlich, B. and Pidgeon, C. R. and Abrosimov, N. V. and Andreev, Y. and Huang, Zhiming and Murdin, B. N.},
	month = jan,
	year = {2021},
	keywords = {fano},
	pages = {454},
	file = {Litvinenko et al. - 2021 - The multi-photon induced Fano effect.pdf:files/5/Litvinenko et al. - 2021 - The multi-photon induced Fano effect.pdf:application/pdf},
